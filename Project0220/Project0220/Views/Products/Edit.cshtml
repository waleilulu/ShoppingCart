			<div class="row mb-3">
				<label class="col-md-4 col-form-label">ProductID</label>
				<div class="col-sm-8">
					<input class="form-control-plaintext" readonly value="@ViewData["ProductID"]">

				</div>
			</div>

			<div class="row mb-3">
				<label class="col-md-4 col-form-label">ProductName</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ProductName">
					<span asp-validation-for="ProductName" class="text-dnager"></span>
				</div>
			</div>


			<div class="row mb-3">
				<label class="col-md-4 col-form-label">SupplierID</label>
				<div class="col-sm-8">
					<input type="number" min="0" class="form-control" asp-for="SupplierID">
					<span asp-validation-for="SupplierID" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-md-4 col-form-label">CategoryID</label>
				<div class="col-sm-8">
					<input type="number" min="0" class="form-control" asp-for="CategoryID">
					<span asp-validation-for="CategoryID" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-md-4 col-form-label">UnitPrice</label>
				<div class="col-sm-8">
					<input type="number" min="0" class="form-control" asp-for="UnitPrice">
					<span asp-validation-for="UnitPrice" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-md-4 col-form-label">UnitInStock</label>
				<div class="col-sm-8">
					<input type="number" min="0" class="form-control" asp-for="UnitInStock">
					<span asp-validation-for="UnitInStock" class="text-danger"></span>
				</div>
			</div>


			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-8">
					<img src="/images/All_product/@ViewData["Image1"]" alt="" width="60">
