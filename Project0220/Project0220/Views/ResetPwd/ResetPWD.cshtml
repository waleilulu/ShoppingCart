@model Project0220.myModels.Customer


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="logintitle">重新設定密碼</h2><br />
            <form asp-action="ResetPWD" method="post">
                <div class="form-group">
                    <label class="control-label" name="newPwd" >請輸入帳號:</label>
                    <input type="text" class="form-control" name="Username" />
                </div>
                <div class="form-group">
                    <label class="control-label" name="newPwd" >請輸入新密碼:</label>
                    <input type="text" class="form-control" name="newPwd" />
                </div>
                <div class="form-group">
                    <label class="control-label" name="newPwd2">請再次輸入新密碼:</label>
                    <input type="text" class="form-control" name="newPwd2" />
                </div>
                <div class="form-group">
                <a asp-controller="ResetPwd" asp-action="ResetPWD"></a>
                <input type="submit" name="Check" value="確認" style="background-color:#d4d4c5;font-weight:bold;">
                </div>

            </form>
        </div>
    </div>
</div>
