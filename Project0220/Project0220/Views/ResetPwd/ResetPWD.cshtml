@model Project0220.myModels.Customer



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="logintitle">重新設定密碼</h2><br />
            <form asp-action="ResetPWD" method="post">
                <div class="form-group">
                    <label class="control-label">請輸入帳號:</label>
                    <input type="text" class="form-control" name="Username" />
                </div>
                 <div class="form-group">
                    <label class="control-label">請輸入新密碼:</label>
                    <input type="text" class="form-control" name="newPwd" />
                   
                </div>
                <div class="form-group">
                    <label class="control-label">請再次輸入新密碼:</label>
                    <input type="text" class="form-control" name="newPwd2" />
                   
                </div>
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <div class="form-group">
                    <a asp-controller="ResetPwd" asp-action="ResetPWD"></a>
                    <button type="submit" class="btn btn-primary">確認</button>
                </div>
            </form>

        </div>
    </div>
</div>
