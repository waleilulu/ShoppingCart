@model IEnumerable<Project0220.myModels.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h2 class="text-center mb-5">Orders 訂單</h2>


<div class="container-fluid">
    <div class="row mb-5">
        <div class="col-md-6">
            <a class="btn btn-primary" asp-controller="Orders" asp-action="Create">
                <i class="fa-solid fa-plus"></i>
            </a>
        </div>
        <div class="col-md-6">
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>OrderID</th>
                    <th>CustomerID</th>
                    <th>OrderDate</th>
                    <th>TotalAmount</th>
                    <th>PaymentMethod</th>
                    <th>Carrier</th>
                    <th>ShippingDate</th>
                    <th>PostalCode</th>
                    <th>ShippingAddress</th>
                    <th>Consignee</th>
                    <th>ContactPhone</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.CustomerId</td>
                        <td>@order.OrderDate</td>
                        <td>@order.TotalAmount</td>
                        <td>@order.PaymentMethod</td>
                        <td>@order.Carrier</td>
                        <td>@order.ShippingDate</td>
                        <td>@order.PostalCode</td>
                        <td>@order.ShippingAddress</td>
                        <td>@order.Consignee</td>
                        <td>@order.ContactPhone</td>
                        <td>@order.Status</td>
                        @*<td>@category.CreatedAt.ToString("yyyy/MM/dd")</td> *@
                        <td style="white-space: nowrap;">
                            <a class="btn btn-primary btn-sm" asp-controller="Orders" asp-action="Edit"
                               asp-route-id="@order.OrderId">
                                <i class="fa-regular fa-pen-to-square"></i>
                           </a>
                            <a class="btn btn-danger btn-sm" asp-controller="Orders" asp-action="Delete"
                               asp-route-id="@order.OrderId">
                                <i class="fa-regular fa-trash-can"></i>
                           </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
