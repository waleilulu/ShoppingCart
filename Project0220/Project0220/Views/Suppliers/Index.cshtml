</nav>
</br>


<h2 class="text-center mb-5">Suppliers 供應商</h2>


<div class="container-fluid">
	<div class="row mb-5">
		<div class="col-md-6">
			<a class="btn btn-primary" asp-controller="Suppliers" asp-action="Create">新增</a>
		</div>
		<div class="col-md-6">
		</div>
	</div>

	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>SupplierId</th>
					<th>CompanyName</th>
					<th>ContactName</th>
					<th>Phone</th>
					<th>Email</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var supplier in Model)
				{
					<tr>
						<td>@supplier.SupplierId</td>
						<td>@supplier.CompanyName</td>
						<td>@supplier.ContactName</td>
						<td>@supplier.Phone</td>
						<td>@supplier.Email</td>
						@*<td>@category.CreatedAt.ToString("yyyy/MM/dd")</td> *@
						<td style="white-space: nowrap;">
							<a class="btn btn-primary btn-sm" asp-controller="Suppliers" asp-action="Edit"
							   asp-route-id="@supplier.SupplierId">編輯</a>
							<a class="btn btn-danger btn-sm" asp-controller="Suppliers" asp-action="Delete"
							   asp-route-id="@supplier.SupplierId">刪除</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
