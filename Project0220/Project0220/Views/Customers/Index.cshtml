<h2 class="text-center mb-5">會員資料</h2>


<div class="container-fluid">
    <div class="row mb-5">
        <div class="col-md-6">
            <a class="btn btn-primary" asp-controller="Customers" asp-action="Create">新增</a>
        </div>
        <div class="col-md-6">
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>CustomerID</th>
                    <th>CustomerName</th>
                    <th>DateOfBirth</th>
                    <th>Gender</th>
                    <th>MobilePhoneNumber</th>
                    <th>Email</th>
                    <th>Address_City</th>
                    <th>Address_Dist</th>
                    <th>Address</th>
                    <th>UserName</th>
                    <th>Password</th>
                    <th>Admin</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td>@customer.CustomerName</td>
                        @* <td>@customer.DateOfBirth</td> *@
                        <td>@Html.DisplayFor(modelItem => customer.DateOfBirth)</td>
                        <td>@customer.Gender</td>
                        <td>@customer.MobilePhoneNumber</td>
                        <td>@customer.Email</td>
                        <td>@customer.AddressCity</td>
                        <td>@customer.AddressDist</td>
                        <td>@customer.Address</td>
                        <td>@customer.Username</td>
                        <td>@customer.Password</td>
                        <td>@customer.Admin</td>
                        @*<td>@category.CreatedAt.ToString("yyyy/MM/dd")</td> *@ 
                        <td style="white-space: nowrap;">
                            <a class="btn btn-primary btn-sm" asp-controller="Customers" asp-action="Edit"
                               asp-route-id="@customer.CustomerId">編輯</a>
                            <a class="btn btn-danger btn-sm" asp-controller="Customers" asp-action="Delete"
                               asp-route-id="@customer.CustomerId">刪除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
