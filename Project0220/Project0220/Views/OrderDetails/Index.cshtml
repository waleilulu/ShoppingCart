@model IEnumerable<Project0220.myModels.OrderDetail>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h2 class="text-center mb-5">OrderDetails 訂單詳情</h2>


<div class="container-fluid">
    <div class="row mb-5">
        <div class="col-md-6">
            <a class="btn btn-primary" asp-controller="OrderDetails" asp-action="Create">
                <i class="fa-solid fa-plus"></i>
            </a>
        </div>
        <div class="col-md-6">
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>OrderDetailID</th>
                    <th>OrderID</th>
                    <th>ProductID</th>
                    <th>SelectedColor</th>
                    <th>Quantity</th>
                    <th>UnitPrice</th>
                    <th>Discount</th>
                    <th>Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderDetail in Model)
                {
                    <tr>
                        <td>@orderDetail.OrderDetailId</td>
                        <td>@orderDetail.OrderId</td>
                        <td>@orderDetail.ProductId</td>
                        <td>@orderDetail.SelectedColor</td>
                        <td>@orderDetail.Quantity</td>
                        <td>@orderDetail.UnitPrice</td>
                        <td>@orderDetail.Discount</td>
                        <td>@orderDetail.Amount</td>
                        @*<td>@category.CreatedAt.ToString("yyyy/MM/dd")</td> *@
                        <td style="white-space: nowrap;">
                            <a class="btn btn-primary btn-sm" asp-controller="OrderDetails" asp-action="Edit"
                               asp-route-id="@orderDetail.OrderDetailId">
                                <i class="fa-regular fa-pen-to-square"></i>
                           </a>
                            <a class="btn btn-danger btn-sm" asp-controller="OrderDetails" asp-action="Delete"
                               asp-route-id="@orderDetail.OrderDetailId">
                                <i class="fa-regular fa-trash-can"></i>
                           </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
