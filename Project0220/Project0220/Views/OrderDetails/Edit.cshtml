<div class="row justify-content-center">
    <div class="col-md-6 mx-auto rounded border p-3">
        <form method="post" enctype="multipart/form-data">
            <h2 class="text-center mb-5">Edit OrderDetail</h2>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">Order ID</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="OrderId" asp-items="ViewBag.OrderId">
                    <span asp-validation-for="OrderId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">Product ID</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProductId" asp-items="ViewBag.ProductId">
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">Quantity</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Quantity">
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">Unit Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UnitPrice">
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">Discount</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Discount">
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


