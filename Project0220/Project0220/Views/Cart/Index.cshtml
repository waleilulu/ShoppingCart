@model List<Project0220.myModels.CartItem>

@if (Model != null && Model.Any())
{
    <div class="container">
        <h1 class="mt-4 mb-4">購物車</h1>
        <div class="row">
            <div class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">產品ID</th>
                            <th scope="col">產品圖示</th>
                            <th scope="col">產品名稱</th>
                            <th scope="col">價格</th>
                            <th scope="col">選擇的顏色</th>
                            <th scope="col">數量</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductID</td>
                                <td><img src="~/images/All_product/@item.Product.Image1" alt="" width="70"></td>
                                <td>@item.Product.ProductName</td>
                                <td>$@item.Product.UnitPrice</td>
                                <td>@item.SelectedColor</td>
                                <td>
                                    <form method="post" asp-controller="Cart" asp-action="UpdateCartItemQuantity">
                                        <input type="hidden" name="cartItemId" value="@item.CartItemID" />
                                        <input type="number" class="update" name="newQuantity" value="@item.Quantity" min="1" />
                                    </form>
                                </td>
                                <td>
                                    <form method="post" asp-controller="Cart" asp-action="RemoveFromCart">
                                        <input type="hidden" name="cartItemId" value="@item.CartItemID" />
                                        <button type="submit" class="btn btn-danger">移除</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- 清空購物車按鈕 -->
                <form method="post" asp-controller="Cart" asp-action="EmptyCart" class="mt-3">
                    <button type="submit" class="btn btn-warning">清空購物車</button>
                </form>
                <div class="text-end">
                    <p>總價格: $<span id="totalPrice"></span></p>
                    <p>總商品數量: <span id="totalQuantity"></span></p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <p class="mt-4">您的購物車為空。</p>
    </div>
}
<script>

        $(".update").on('change',function(){
            var quantity= $(this).val();
            var id = $(this).closest("form").find("[name=cartItemId]").val();
            console.log("quantity:",quantity,"id:",id);
            var data = {};
            data["CartItemID"]=id;
            data["Quantity"]=quantity;
            data= JSON.stringify(data);
            console.log(data);
              $.ajax({
             url:"/Cart/UpdateCartItemQuantity",
             method:"post",
            data:{"data":data},
             success:function (result){
                 alert("更新成功");

             },
             error:function (error){
                 console.error("發生錯誤:",error);
             }

         });

        })




    // 在頁面加載時計算總價格和總商品數量
    $(document).ready(function () {
        calculateTotal();
    });

    // 監聽數量更改事件
    $(".update").on('change', function () {
        var quantity = $(this).val();
        var id = $(this).closest("form").find("[name=cartItemId]").val();
        updateCartItemQuantity(id, quantity);
    });

    // 更新購物車項目數量
    function updateCartItemQuantity(cartItemId, quantity) {
        var data = {};
        data["CartItemID"] = cartItemId;
        data["Quantity"] = quantity;
        data = JSON.stringify(data);
        $.ajax({
            url: "/Cart/UpdateCartItemQuantity",
            method: "post",
            data: {
                "data": data
            },
            success: function (result) {
                alert("更新成功");
                calculateTotal(); // 更新總價格和總商品數量
            },
            error: function (error) {
                console.error("發生錯誤:", error);
            }
        });
    }

    // 計算總價格和總商品數量
    function calculateTotal() {
        var totalPrice = 0;
        var totalQuantity = 0;
        $(".update").each(function () {
            var price = parseFloat($(this).closest("tr").find("td:eq(3)").text().replace("$", ""));
            var quantity = parseInt($(this).val());
            totalPrice += price * quantity;
            totalQuantity += quantity;
        });
        $("#totalPrice").text(totalPrice.toFixed(0)); // 將總價格填充到元素中
        $("#totalQuantity").text(totalQuantity); // 將總商品數量填充到元素中
    }
</script>