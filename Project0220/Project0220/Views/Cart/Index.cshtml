                        <!-- Checkout Form Start-->
                                        @*   <form action="#" class="checkout-form"> *@
                            <div class="row row-40">

                                <div class="col-lg-7">

                                    <!-- Billing Address -->
                                    <div id="billing-form" class="mb-10">
                                        <h4 class="checkout-title">收件資訊</h4>
                                        <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row">

                                            <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="Consignee" class="control-label">收件人*</label>
                                                 <input asp-for="Consignee" class="form-control" type="text" placeholder="請輸入收件人姓名或公司名稱"/>
                                                <span asp-validation-for="Consignee" class="text-danger"></span>

                                            </div>

                                            <div class="col-md-6 col-12 mb-20">
                                                 <label asp-for="ContactPhone" class="control-label">聯絡電話*</label>
                                                 <input asp-for="ContactPhone" class="form-control" type="text" placeholder="請輸入電話"/>
                                                 <span asp-validation-for="ContactPhone" class="text-danger"></span>

                                            </div>

                                             <div class="col-md-6 col-12 mb-20">
                                                  <p>付款資訊*</p>
                                                  <select asp-for="PaymentMethod" class="control-label nice-select" id="paymentMethod"  
                                                  style ="width: 290px;" >
                                                      <option >請選擇使用付款方式</option>
                                                      <option asp-for="PaymentMethod" class="form-control" value="匯款">匯款</option>
                                                      <option asp-for="PaymentMethod" class="form-control" value="信用卡">信用卡</option>
                                                  </select>
                                              </div>

                                               <div class="col-md-6 col-12 mb-20">
                                                <p>配送資訊*</p>
                                                <select asp-for="Carrier"  class="control-label nice-select"  id="paymentMethod"
                                                style ="width: 290px;">
                                                    <option >請選擇配送貨運公司</option>
                                                    <option asp-for="Carrier" class="form-control">自行配送</option>
                                                    <option asp-for="Carrier" class="form-control">新竹貨運</option>
                                                    <option asp-for="Carrier" class="form-control">黑貓宅急便</option>
                                                </select>
                                            </div>

                                            <div class="col-12 mb-20">
                                                <label asp-for="ShippingAddress" class="control-label">收件地址*</label>
                                                <input asp-for="ShippingAddress" class="form-control" type="text" placeholder="請輸入收件地址"/>
                                                <span asp-validation-for="ShippingAddress" class="text-danger"></span>

                                            </div>

                                             <div class="col-md-6 col-12 mb-20">
                                                <label asp-for="ShippingDate" class="control-label">寄送日期</label>
                                                <input asp-for="ShippingDate" class="form-control date-picker" type="date" placeholder="請選擇日期" min="@DateTime.Now.AddDays(2).ToString("yyyy-MM-dd")" />
                                                <span asp-validation-for="ShippingDate" class="text-danger"></span>

                                            </div>




                                                            @*                                               <input asp-action="Create" type="submit" value="Create" class="btn btn-primary" />
 *@                                              </form>  

                                            <div class="col-md-6 col-12 mb-20">
                                                <label  class="control-label">優惠券 </label>
                                                <input class="form-control" type="text"  style ="width: 150px;" placeholder="請輸入優惠碼">
                                            </div>
                                            <div>
                                                <button class=" cart-button0101" style="">確認</button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
