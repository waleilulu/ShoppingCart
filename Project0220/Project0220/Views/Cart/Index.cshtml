@model List<Project0220.myModels.CartItem>

@if (Model != null && Model.Any())
{
    <h1>購物車</h1>
    <table>
        <tr>
            <th>產品ID</th>
            @* <th>產品名稱</th>
            <th>價格</th> *@
            <th>選擇的顏色</th>
            <th>數量</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                @* <td>@item.Product.ProductName</td>
                <td>@item.Product.UnitPrice</td> *@
                <td>@item.SelectedColor</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </table>
}
else
{
    <p>您的購物車為空。</p>
}
