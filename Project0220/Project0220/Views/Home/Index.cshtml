@{
    ViewData["Title"] = "首頁";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

</head>

<body>

    <!-- 版面切割 -->
    <div class="container">
        <div class="row">
            <!-- 第一個區域由左到右1個版面 -->
            <div class="col-md-12">
                <!-- 輪播圖開始 -->
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/image1.jpeg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/image2.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/image3.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/image4.png" alt="Fourth slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <!-- 輪播圖結束 -->
            </div>
        </div>
        <br></br>

        <div class="row">
            <!-- 第二個區域由左到右3個版面 -->
            <div class="col-md-4">
                <img src="~/images/image5.jpg" class="rounded-lg" alt="照片描述" width="100%;" height="180px">
                <p>新房布置</p>
            </div>
            <div class="col-md-4">
                <img src="~/images/image6.jpg" class="rounded-lg" alt="照片描述" width="100%;" height="180px">
                <p>孩童樂園</p>
            </div>
            <div class="col-md-4">
                <img src="~/images/image7.jpg" class="rounded-lg" alt="照片描述" width="100%;" height="180px">
                <p>小家庭布置</p>
            </div>
        </div>

        <div class="row">
            <!-- 第三個區域由左到右1個版面 -->
            <div class="col-md-12">
                <!-- 輪播圖開始 -->
                <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/image12.png" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/image13.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/image14.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/image15.png" alt="Fourth slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/images/image16.png" alt="Fourth slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators2" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators2" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <!-- 輪播圖結束 -->
            </div>
        </div>
        <br></br>

        <!--熱賣商品一覽-->
        <div class="row">
            <div class="col-md-12">
                <img src="~/images/image17.png" class="rounded-lg" alt="照片描述" width="100%;">
            </div>
        </div>
        <br></br>
        <!--熱賣商品一覽-->

        <div class="row">
            <!-- 第四個區域由左到右4個版面 -->
            <div class="col-md-3">
                <div class="card" style="width:100%;">
                    <img src="~/images/image8.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h6 class="card-title"><span class="badge badge-secondary">New</span> 胡桃木床頭櫃</h6>
                        <p>$4,500</p>
                        <a href="#" class="btn btn-primary stretched-link">商品頁面</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card" style="width:100%; width:100%;">
                    <img src="~/images/image9.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h6 class="card-title"><span class="badge badge-secondary">New</span> 透明玻璃吊燈</h6>
                        <p>$990</p>
                        <a href="#" class="btn btn-primary stretched-link">商品頁面</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card" style="width:100%;">
                    <img src="~/images/image10.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h6 class="card-title"><span class="badge badge-secondary">New</span> 靠枕套</h6>
                        <p>$399</p>
                        <a href="#" class="btn btn-primary stretched-link">商品頁面</a>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card" style="width:100%;">
                    <img src="~/images/image11.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h6 class="card-title"><span class="badge badge-secondary">New</span> 四門衣櫃組合</h6>
                        <p>$33,000</p>
                        <a href="#" class="btn btn-primary stretched-link">商品頁面</a>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>

</html>