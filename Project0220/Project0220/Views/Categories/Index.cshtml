@model IEnumerable<Project0220.myModels.Category>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



<h2 class="text-center mb-5">Categories 產品類別</h2>


<div class="container-fluid">
	<div class="row mb-5">
		<div class="col-md-6">
			<a class="btn btn-primary" asp-controller="Categories" asp-action="Create">
				<i class="fa-solid fa-plus"></i>
			</a>
		</div>
		<div class="col-md-6">
		</div>
	</div>

	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>CategoryID</th>
					<th>CategoryName</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var category in Model)
				{
					<tr>
						<td>@category.CategoryId</td>
						<td>@category.CategoryName</td>
						@* <td>@category.CreatedAt.ToString("yyyy/MM/dd")</td> *@
						<td style="white-space: nowrap;">
							<a class="btn btn-primary btn-sm" asp-controller="Categories" asp-action="Edit"
							   asp-route-id="@category.CategoryId">
								<i class="fa-regular fa-pen-to-square"></i>
							</a>
							<a class="btn btn-danger btn-sm" asp-controller="Categories" asp-action="Delete"
							   asp-route-id="@category.CategoryId">
								<i class="fa-regular fa-trash-can"></i>
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>